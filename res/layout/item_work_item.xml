<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:minHeight="70dp"
    android:background="@color/white"
    android:orientation="horizontal" >
    <RelativeLayout
        android:id="@+id/l_im_check"
        android:layout_width="40dp"
        android:layout_height="match_parent"
       >
    <ImageView  
        android:id="@+id/im_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:background="@drawable/btn_bg_checked"/>
    </RelativeLayout>
    
<LinearLayout
        android:id="@+id/l_info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
       
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="美团产品经理"
                android:textColor="@color/font_strong_color"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/tx_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="8000-14000"
                android:textColor="@color/font_tab_color"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tx_company_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="美团网"
            android:textColor="@color/font_weak_coloe"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_graduate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="本科"
                android:textColor="@color/font_weak_coloe"
                android:textSize="@dimen/font_14" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/devide_line" />

            <TextView
                android:id="@+id/tx_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@color/font_weak_coloe"
                android:textSize="@dimen/font_14" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/devide_line" />

            <TextView
                android:id="@+id/tx_work_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全职"
                android:textColor="@color/font_weak_coloe"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tx_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="22小时前发布"
                android:textColor="@color/font_weak_coloe"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
