<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="100dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/custom_list_item_bg">
   <Button
                android:id="@+id/bn_delete"
                android:layout_width="80dp"
                android:layout_height="41dp"
                android:background="@drawable/custom_bn_bg"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="删除"
                android:textColor="@color/custom_dialog_right_text"
                android:textSize="15sp" />
    
     <LinearLayout
         android:id="@+id/rl_info"
         android:layout_toLeftOf="@+id/bn_delete"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
    <TextView
            android:id="@+id/tx_info1"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp"
         
            android:gravity="left|center_vertical"
            android:text="中国美团"
            android:textColor="@color/font_strong_color"
            android:textSize="@dimen/font_16" />
   
        <TextView
            android:id="@+id/tx_info2"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp" 
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="描述一段信息"
            android:textColor="@color/custom_dialog_left_text"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tx_info3"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp" 
            android:text="2002-2006  国际贸易  本科"
            android:textColor="@color/custom_dialog_left_text"
            android:textSize="@dimen/font_14" />
        
         <TextView
            android:id="@+id/tx_info4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp" 
            android:text="2002-2006  国际贸易  本科"
            android:textColor="@color/custom_dialog_left_text"
            android:textSize="@dimen/font_14" />

    </LinearLayout>
</RelativeLayout>
