<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:minHeight="80dp"
    android:background="@drawable/custom_list_item_bg"
    android:orientation="vertical" >
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:minHeight="80dp">
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        style="@style/custom_checkbox" 
        android:checked="false" />
    
    <RelativeLayout
          android:id="@+id/r_right"
          android:layout_width="90dp"
          android:layout_height="match_parent"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:layout_alignParentRight="true" >

          <TextView
              android:id="@+id/tx_salary"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:text="8000-10000"
              android:gravity="right"
              android:textColor="@color/font_tab_color"
              android:textSize="@dimen/font_12" />

          <TextView
              android:id="@+id/tx_timer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:gravity="right"
              android:layout_alignParentBottom="true"
              android:text="22小时前发布"
              android:textColor="@color/custom_dialog_left_text"
              android:textSize="@dimen/font_12" />
      </RelativeLayout>
    

 <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/checkBox"
          android:layout_toLeftOf="@+id/r_right"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp" >

       <TextView
           android:id="@+id/tx_position"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/font_tab_color"
           android:textSize="@dimen/font_16"
           android:text="团购系统产品经理" />
       
         <TextView
           android:id="@+id/tx_info"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:text="本科|北京|全职"
           android:textColor="@color/custom_dialog_left_text"
           android:textSize="@dimen/font_12" />

       <TextView
           android:id="@+id/tx_company"
           android:layout_below="@+id/tx_position"
           android:layout_above="@+id/tx_info"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="美团网"
           android:textColor="@color/custom_dialog_left_text"
           android:textSize="@dimen/font_14" />
   </RelativeLayout>

    
</RelativeLayout>
</LinearLayout>
