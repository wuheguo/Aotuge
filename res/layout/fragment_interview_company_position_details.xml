<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg" >
<ScrollView   
       android:layout_width="match_parent"
       android:layout_marginBottom="60dp"
        android:layout_height="match_parent">
         <LinearLayout
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@color/view_bg"
        android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/l_info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/font_strong_color"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/tx_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text=""
                android:textColor="@color/font_tab_color"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tx_company_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            
            android:textColor="@color/font_weak_coloe"
            android:textSize="@dimen/font_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tx_graduate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="本科"
                android:textColor="@color/font_weak_coloe"
                android:textSize="@dimen/font_14" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/devide_line" />

            <TextView
                android:id="@+id/tx_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@color/font_weak_coloe"
                android:textSize="@dimen/font_14" />

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/devide_line" />

            <TextView
                android:id="@+id/tx_work_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全职"
                android:textColor="@color/font_weak_coloe"
                android:textSize="@dimen/font_14" />

            <TextView
                android:id="@+id/tx_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="22小时前发布"
                android:textColor="@color/font_weak_coloe"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>

   <LinearLayout 
    android:id="@+id/l_grid_view"
   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/custom_list_item_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_list_item_title"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/title_image"
            android:gravity="center_vertical"
            android:text="职位亮点"
            android:textColor="@color/font_strong_color"
            android:textSize="@dimen/font_16" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/devide_line" />

    <com.aotu.baseview.CustomGridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whites"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:padding="10dp"
        android:verticalSpacing="5dp" />

   
 </LinearLayout>
 
    
   
    
     <LinearLayout
         
    android:layout_below="@+id/l_grid_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@drawable/custom_list_item_bg"
    android:orientation="vertical" >
           <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/devide_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/title_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_list_item_title"
            android:contentDescription="@string/app_name" />

        <TextView
           
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/title_image1"
            android:gravity="center_vertical"
            android:text="任职要求"
            android:textColor="@color/font_strong_color"
            android:textSize="@dimen/font_16" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/devide_line" />

   

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/company_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/custom_dialog_left_text"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>
<RelativeLayout 
           android:id="@+id/rl_bn"
           android:layout_alignParentBottom="true"
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:background="@color/white"
           android:layout_height="50dp">
         <TextView android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/devide_line"/>
        <ImageView 
            android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/company_position"
        android:contentDescription="@string/app_name"/>
        
          <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/bn_join"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/custom_bn_bg"
                android:gravity="center"
                android:text="申请职位"
                android:textColor="@color/custom_dialog_right_text"
                android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>