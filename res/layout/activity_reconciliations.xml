<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg"
    android:orientation="vertical" >
     <include
        android:id="@+id/header_bar"
        layout="@layout/header" />
     <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/whites" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/bn_tixian"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/tx_tab"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:text="账户余额:"
                            android:textColor="@color/font_weak_coloe"
                            android:textSize="@dimen/font_16" />

                        <TextView
                            android:id="@+id/tx_money"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tx_tab"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/font_right_color"
                            android:textSize="@dimen/font_16" />
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/bn_tixian"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/tixian_bn_bg"
                    android:gravity="center"
                    android:text="提现"
                    android:textColor="@color/custom_dialog_right_text"
                    android:textSize="15sp" />

            </RelativeLayout>
     
    <com.aotu.baseview.CustomListView 
     android:id="@+id/list_view"
     android:layout_marginTop="15dp"
        android:divider="@color/devide_line"
            android:dividerHeight="1.0px"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     />
</LinearLayout>
