<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/header_bar"
        layout="@layout/header" />
   

     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dip">
       

      <EditText
            android:id="@+id/ed_logon_username"
            style="@style/customeditmoblie" 
            android:hint="手机号/邮箱"/>

        <Button
            android:id="@+id/bn_logon_username_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_clear"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip">

      <EditText
            android:id="@+id/ed_logon_password"
            style="@style/customeditpassword" 
            android:hint="密码"/>

        <Button
            android:id="@+id/bn_logon_password_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_clear"
            android:visibility="invisible" />
    </RelativeLayout>

    <Button
        android:id="@+id/bn_logon"
        style="@style/custombutton"
        android:layout_marginTop="24dp"
        android:text="登录"
        android:enabled="false"
         />
    
    <RelativeLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="17.0dp"
        android:layout_marginRight="17.0dip">
        <TextView
        android:id="@+id/tx_register"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:textColor="@color/font_right_color"
        android:text="还没注册" />
        
        <TextView
        android:id="@+id/tx_reset_password"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:textColor="@color/font_right_color"
        android:text="忘记密码" />
    </RelativeLayout>
</LinearLayout>