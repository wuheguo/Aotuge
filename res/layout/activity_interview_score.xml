<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/header_bar"
        layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whites"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tx_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:textSize="@dimen/font_18"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tx_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="3dp" 
                android:textColor="@color/font_strong_color"
                android:textSize="@dimen/font_15" />

            <TextView
                android:id="@+id/tx_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/font_strong_color"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/font_15" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:background="@color/devide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/whites"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tx_total_score"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:gravity="center_vertical"
            android:text="总体印象"
            android:textColor="@color/font_strong_color"
            android:textSize="@dimen/font_16" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#cccccc" />

        <RelativeLayout
            android:onClick="onTotal1"
            android:layout_width="40dp"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/im_total1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/xing_big2" />
        </RelativeLayout>

        <RelativeLayout
            android:onClick="onTotal2"
            android:layout_width="40dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/im_total2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/xing_big2" />
        </RelativeLayout>
        <RelativeLayout
            android:onClick="onTotal3"
            android:layout_width="40dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/im_total3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/xing_big2" />
        </RelativeLayout>
        <RelativeLayout
            android:onClick="onTotal4"
            android:layout_width="40dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/im_total4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/xing_big2" />
        </RelativeLayout>
        <RelativeLayout
            android:onClick="onTotal5"
            android:layout_width="40dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/im_total5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/xing_big2" />
        </RelativeLayout>
    </LinearLayout>
      <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/devide_line" />
    <com.aotu.baseview.CustomListView 
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:dividerHeight="0.5dp"
        android:divider="@color/devide_line"/>
        
  

    <Button
        android:id="@+id/bn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/custom_dialog_right_bn"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/custom_dialog_right_text"
        android:textSize="15sp" />

</LinearLayout>